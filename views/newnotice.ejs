

<% if(typeof errs !== 'undefined'){ %>
    <% errs.forEach(()=>{ %>
        <h3><%= err.param %> : <%= errs.msg %></h3>
    <% }) %>
<% } %>
<form method="POST" action="/store">
<div class="cs_tabContent" style="display:block">
    <div class="cs_tabContentInner">
        <div class="cs_box1">
            <div class="ask_title">
                <p class="h3 bold">공지사항 작성</p>
            </div>
            <div class="ask_title_wrap">
                <div class="ask_box">
                    <div class="ask_title">
                        <input type="text" name="title" id="title" placeholder="title">
                        <span>제목</span>
                    </div>
                </div>
            </div>
            <div class="ask_content_wrap">
                <div class="ask_box">
                    <div class="ask_content">
                        <textarea name="content" id="content"></textarea>
                        <span>내용</span>
                    </div>
                </div>
            </div>
            <div class="ask_submit_wrap">
                <div class="ask_submit">
                    <input type="submit" value="확인">
                </div>
            </div>
        </div>
    </div>
</div>
</form>